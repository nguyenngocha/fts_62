<%= f.label :content, t("subject.content") %>
<%= f.text_field :content, class: "form-control" %>

<div class="col-md-6">
  <%= f.label :number_of_questions, t("subject.number_of_questions") %>
  <%= f.number_field :number_of_questions,
    min: 10, max: 100, class: "form-control" %>

  <%= f.label :duration, t("subject.duration") %>
  <%= f.number_field :duration, min: 5, max: 1000, class: "form-control" %>
</div>
<br/>
<%= f.submit t("subject.submit"),
  class: "btn btn-primary col-md-4 col-md-offset-4" %>
